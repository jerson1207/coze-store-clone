<!-- _banner_item.html.erb -->
<div class="block w-1/3 h-80 border border-gray-200 group relative overflow-hidden transition duration-300 ease-in-out hover:bg-violet-700 hover:text-white">
  <!-- Background Image -->
  <div class="absolute inset-0 bg-cover bg-center transition duration-300 ease-in-out" style="background-image: url('<%= asset_path(image) %>');"></div>

  <!-- Semi-transparent Overlay for Background Hover Effect -->
  <div class="absolute inset-0 bg-opacity-30 group-hover:bg-violet-700 group-hover:bg-opacity-60 transition duration-300 ease-in-out"></div>

  <!-- Text Content -->
  <div class="absolute top-5 left-5 z-10">
    <h2 class="text-2xl font-bold"><%= title %></h2>
    <h3 class="text-lg"><%= subtitle %></h3>
  </div>

  <!-- Button Container (Appears on Hover) -->
  <div class="absolute bottom-5 left-5 right-5 bg-opacity-60 flex items-center justify-between opacity-0 group-hover:opacity-100 transition duration-300 ease-in-out p-4">
    <%= link_to "Shop Now", root_path, class: "text-white text-lg font-bold underline" %>
  </div>
</div>
