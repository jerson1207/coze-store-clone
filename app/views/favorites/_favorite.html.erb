<div id="favorite_<%= product.id %>" class="bg-white shadow-md rounded-lg p-4">
  <div class="flex justify-between items-center">
    <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= product.name %></h2>
    <div>
      <%= button_to favorite_path(product), method: :delete, remote: true, form_class: "inline" do %>
        <i class="fa-solid fa-heart cursor-pointer"></i>
      <% end %>
    </div>
  </div>

  <p class="text-lg text-gray-600 mb-4">$<%= product.price %></p>

  <!-- Optionally, add a product image -->
  <img src="https://via.placeholder.com/400x300.png?text=Product+Image" alt="<%= product.name %>" class="w-full h-48 object-cover rounded-md mb-4" />

  <!-- Add more product details or action buttons -->
  <div class="flex justify-between items-center">
    <button class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">Add to cart</button>
  </div>
</div>
