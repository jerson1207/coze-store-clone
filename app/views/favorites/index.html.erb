<div id="flash">
  <%= render "layouts/flash" %>
</div>

<div class="max-w-7xl mx-auto p-6">
  <h1 class="text-2xl font-semibold mb-6">Your Favorited Products</h1>

  <%= turbo_frame_tag "favorites" do %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% if @favorites.any? %>
        <%= render partial: "favorite", collection: @favorites, as: :product %>
      <% else %>
        <%= render partial: "no_favorites" %>
      <% end %>
    </div>
  <% end %>
</div>
