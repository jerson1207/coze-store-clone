<div class="min-h-screen flex items-center justify-center w-full dark:bg-gray-950">
  <div class="bg-white dark:bg-gray-900 shadow-md rounded-lg px-8 py-6 max-w-md">
    <h1 class="text-2xl font-bold text-center mb-4 dark:text-gray-200">Log in</h1>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8" }) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 focus:outline-none mr-2" %>
          <%= f.label :remember_me, class: "text-sm text-gray-700 dark:text-gray-300" %>
        </div>
      <% end %>

      <div class="mb-4 text-center">
        <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-gray-600 dark:text-gray-400 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>

      <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Log in</button>
    <% end %>

    <div class="mt-4 text-center">
      <p class="text-sm text-gray-600 dark:text-gray-400">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "text-indigo-500 hover:text-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %></p>
    </div>
  </div>
</div>